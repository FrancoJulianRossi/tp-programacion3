extends ../index

block content

  style.
    form {
      max-width: 500px;
      margin: 2rem auto;
      padding: 2rem;
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      color: #333;
    }

    form p {
      margin-bottom: 1rem;
    }

    label {
      display: block;
      font-weight: bold;
      margin-bottom: 0.5rem;
    }

    input {
      width: 100%;
      padding: 0.5rem;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-sizing: border-box;
    }

    button {
      padding: 0.7rem 1.5rem;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background-color: #0056b3;
    }

  form(action='/web/turnos/nuevo', method='post')
    p
      label(for='fecha') Fecha:
      input(type='datetime-local', name='fecha', required)
    p
      label(for='estado') Estado:
      select(name='estado', required)
        option(value='disponible') disponible
        option(value='reservado') reservado
    p
      label(for='pacienteId') Paciente:
      select(name='pacienteId', required)
        each paciente in pacientes
          option(value=paciente.id)= `${paciente.nombre} ${paciente.apellido}`
    p
      button(type='submit') Crear turno